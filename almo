    public static void inserirCliente(Cliente cliente, String nomeEmpresa, int cnpjEmpresa, String enderecoEmpresa, int telefoneEmpresa){
        cliente.setNomeEmpresa(nomeEmpresa);
        cliente.setCnpjEmpresa(cnpjEmpresa);
        cliente.setEnderecoEmpresa(enderecoEmpresa);
        cliente.setTelefoneEmpresa(telefoneEmpresa);
    }
    
    public static void inserirItem(Item item, int UPC, int quantidade, String nomeControle, String nomeTelefone, String nomePCB, String nomeBota, String nomeOculos, String nomeColete, String nomeLivro, String nomeEsmalte, String nomeRimel, String nomePerfume, String nomeCamisinha, String nomeCigarro, String nomeAlcool){
        item.setUPC(UPC);
        item.setQuantidade(quantidade);
        item.setNomeControle(nomeControle);
        item.setNomeTelefone(nomeTelefone);
        item.setNomePCB(nomePCB);
        item.setNomeBota(nomeBota);
        item.setNomeOculos(nomeOculos);
        item.setNomeColete(nomeColete);
        item.setNomeLivro(nomeLivro);
        item.setNomeEsmalte(nomeEsmalte);
        item.setNomeRimel(nomeRimel);
        item.setNomePerfume(nomePerfume);
        item.setNomeCamisinha(nomeCamisinha);
        item.setNomeCigarro(nomeCigarro); 
        item.setNomeAlcool(nomeAlcool); 
    }
    
